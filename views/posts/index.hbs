<h2 style="text-align: center">Hi {{username}}!</h2>
<img src='../uploads/profilePhotos/{{profilePhoto}}' style="border-radius:50%;width:100px;height:100px; display: block; margin-left: auto; margin-right: auto">

<h1 style= "text-align: center;">Timeline</h1>
<form action='/posts/new' method ='GET'>
<button type="submit" class="btn btn-primary btn-lg outline" style="display: block; margin-left: auto; margin-right: auto">New Post</button>
</form>
<br>
{{!-- <a class="photo-link" href="/photos">View photos here</a> --}}
<form action='/photos' method ='GET'>
<button type="submit" class="btn btn-primary btn-lg outline" style="display: block; margin-left: auto; margin-right: auto">View photos here</button>
</form>
<br>
 {{#each posts}}
 <div class="posts" style="padding-left: 10px;"></div>
 {{!-- <div class="posts" style="width: 18rem; padding-left: 10px;"> --}}
  <div class="posts-body" style ="text-align:center; border-style:solid; border-radius:10px; border-color: #357ebd;">
    <h2 class="card-title">{{this.message}}</h2>
       <img src='../uploads/authorPhotos/{{this.authorPhoto}}' style="border-radius:50%;width:70px;height:70px>
       <h4 class="card-title">Posted by: {{this.author}}</h4>
      <h4 class="card-title">Posted at: {{this.createdAt}}</h4>
    <form action="/comments/{{this.id}}" method='GET'>
      <button class="btn btn-primary btn-lg outline" style='border: transparent;' type='submit'>Comments</button>
    </form>
    {{!-- class="btnclick" --}}
    <button id={{this.id}} class="btn btn-primary btn-lg outline"  onclick="CountLikes(this);" type="button"> Like <p id="display">{{this.likes}}</p></button>
    <script type="text/javascript">
        var count = 0;
        function CountLikes(element) {
          fetch(`/posts/${element.id}/likes`, {
          method: 'POST',
          mode: 'cors',
          cache: 'no-cache',
          credentials: 'same-origin', 
          headers: {
            'Content-Type': 'application/json'
          },
          redirect: 'follow',
          referrerPolicy: 'no-referrer', 
        });
          element.getElementsByTagName('p')[0].innerText++
        console.log(element)
        }
    </script>
  </div>
</div>
<br>
{{/each}}
    
 
