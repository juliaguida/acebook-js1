
<h2 style="text-align: center">Hi {{username}}!</h2>
<img src='../uploads/profilePhotos/{{profilePhoto}}' style="border-radius:50%;width:100px;height:100px; display: block; margin-left: auto; margin-right: auto">
<h1 style= "text-align: center;">Timeline</h1>
{{!-- <a class="new-photo-link" href="/photos/upload">New photo</a> --}}
<form action='/photos/upload' method ='GET'>
<button type="submit" class="btn btn-primary btn-lg outline" style="display: block; margin-left: auto; margin-right: auto">New photo</button>
</form>
<br>
{{!-- <a class="homelin" href="/posts">Back to posts</a> --}}
<form action='/posts' method ='GET'>
<button type="submit" class="btn btn-primary btn-lg outline" style="display: block; margin-left: auto; margin-right: auto">Back to timeline</button>
</form>
<br>
 {{#each photos}}
<div class="photos" style="border-style:solid, display:flexbox; text-align:center">
  <div class="photos-body" style ="border-style:solid; border-radius:10px; border-color: #357ebd;">
    <h2> {{this.title}}</h2>
       <img src='../uploads/postedPhotos/{{this.postedPhoto}}' style="display:flexbox; max-width:100%; max-height:100%;">
       <h4 class="card-desc">Description: {{this.desc}}</h4>
      <h4 class="card-time">Posted: {{this.createdAt}}</h4>
    {{!-- <a href= "/comments/{{this.id}}" class="card-link">Comments</a> --}}
    <form action="/comments/{{this.id}}" method='GET'>
      <button class="btn btn-primary btn-lg outline" style='border: transparent;' type='submit'>Comments</button>
    </form>
  </div>
</div>
<br>
{{/each}}